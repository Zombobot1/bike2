{
  "name": "uni",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "test": "vitest",
    "test-cy": "cypress open-ct",
    "test-ci-u": "vitest run",
    "test-ci-i": "cypress run-ct --browser chrome",
    "compile": "tsc -w",
    "migrate:local": "firebase emulators:exec --only firestore,auth,storage \"rimraf ./emulators.backup && npm run seed && firebase emulators:export ./emulators.backup\"",
    "circles": "dpdm ./src/index.tsx --tree=false --warning=false",
    "serve": "npm run build && serve -s dist",
    "seed": "NODE_ENV=production FIREBASE_AUTH_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.auth.port)\" FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.database.port)\" FIRESTORE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.firestore.port)\" ts-node ./src/_seed.ts",
    "lint": "eslint \"./src/*\" --fix --max-warnings=0",
    "check": "npm run lint && tsc && npm run test-ci-u && npm run test-ci-i",
    "build": "rimraf ./dist && cross-env NODE_ENV=production webpack",
    "commit-dangerously": "git add . && git commit --no-verify -m",
    "pre-commit": "unset ELECTRON_RUN_AS_NODE && npm run check && git add .",
    "prepare": "is-ci || husky install",
    "sart": "cross-env NODE_ENV=development webpack serve --open",
    "emulators:start": "VITE_USE_EMULATORS=true firebase emulators:start --only firestore,auth,storage --import=./emulators.backup",
    "emulators:start:no_import": "VITE_USE_EMULATORS=true firebase emulators:start --only firestore,auth,storage"
  },
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.0",
    "@mui/lab": "^5.0.0-alpha.47",
    "@mui/material": "^5.5.2",
    "browser-image-compression": "^1.0.15",
    "dayjs": "^1.10.7",
    "fast-equals": "^2.0.4",
    "firebase": "^9.0.0",
    "framer-motion": "^6.2.8",
    "hast-util-to-html": "^8.0.2",
    "immer": "^9.0.12",
    "jotai": "^1.4.6",
    "js-base64": "^3.7.2",
    "js-sha256": "^0.9.0",
    "katex": "^0.13.20",
    "microdiff": "^1.3.0",
    "nanoid": "^3.3.1",
    "react": "^17.0.2",
    "react-contenteditable": "^3.3.5",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-error-boundary": "^3.1.3",
    "react-keyed-flatten-children": "^1.3.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-transition-group": "^4.4.2",
    "reactfire": "^4.2.1",
    "refractor": "^4.2.1",
    "slugify": "^1.5.3",
    "use-gesture": "^1.0.0",
    "workbox-cacheable-response": "^6.2.2",
    "workbox-core": "^6.2.2",
    "workbox-expiration": "^6.2.2",
    "workbox-precaching": "^6.2.2",
    "workbox-routing": "^6.2.2",
    "workbox-strategies": "^6.2.2",
    "workbox-window": "^6.2.2",
    "yjs": "^13.5.34"
  },
  "devDependencies": {
    "@cypress/react": "^5.12.4",
    "@cypress/vite-dev-server": "^2.2.2",
    "@types/katex": "^0.11.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-react": "^1.2.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.4",
    "cypress-real-events": "^1.7.0",
    "dpdm": "^3.8.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "firebase-admin": "10.0.2",
    "husky": "^7.0.1",
    "prettier": "^2.3.1",
    "rimraf": "^2.7.1",
    "serve": "^12.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "vite": "^2.8.4",
    "vite-plugin-svgr": "^0.4.0",
    "vitest": "^0.8.0"
  }
}
