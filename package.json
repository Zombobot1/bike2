{
  "name": "uni",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "test": "vitest",
    "test-cy": "cypress open-ct",
    "test-ci-u": "vitest run",
    "test-ci-i": "cypress run-ct --browser chrome",
    "compile": "tsc -w",
    "circles": "dpdm ./src/index.tsx --tree=false --warning=false",
    "serve": "npm run build && serve -s dist",
    "seed": "FIREBASE_AUTH_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.auth.port)\" FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.database.port)\" FIRESTORE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.firestore.port)\" tsm ./src/_seed.ts",
    "lint": "eslint ./src/* --fix --max-warnings=0",
    "check": "npm run lint && tsc && npm run test-ci-u && npm run test-ci-i",
    "build": "rimraf ./dist && cross-env NODE_ENV=production webpack",
    "commit-dangerously": "git add . && git commit --no-verify -m",
    "pre-commit": "unset ELECTRON_RUN_AS_NODE && npm run check && git add .",
    "prepare": "is-ci || husky install",
    "sart": "cross-env NODE_ENV=development webpack serve --open",
    "t": "tsc",
    "emulators:start": "VITE_USE_EMULATORS=true firebase emulators:start --only functions,firestore,auth,storage --import=./emulators.backup"
  },
  "dependencies": {
